<div class="container" style="margin-top: 50px;">
    <div class="row">
        <p class="text-end">Hola {{persona}} <a href="/admin/login/logout" class="btn btn-danger">
                Cerrar sesión <i class="fas fa-sign-out-alt"></i></a></p>
    </div>
    <div class="row">
        <div class="col-12">
            <h3>Noticias de tecnología</h3>
        </div>
        <div class="col-10 text-end"></div>
        <a href="/admin/blog/agregar" class="btn btn-success" style="width:100px"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</a>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col">Imagen</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each blog}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a href="/admin/blog/modificar/{{id}}" class="btn btn-secondary"><i class="fa fa-edit" aria-hidden="true"></i></a>
                            <a href="/admin/blog/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash-alt" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>